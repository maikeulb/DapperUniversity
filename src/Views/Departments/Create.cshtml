@model DapperUniversity.Models.Department
@{
    ViewBag.Title = "Department";
}

<h2>Create</h2>

<h4>Department</h4>
<hr />

<div class="columns">
  <div class="column col-md-12 col-6">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-input" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="Budget" class="form-label"></label>
        <input asp-for="Budget" class="form-input" />
        <span asp-validation-for="Budget" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-input" type="date"/>
        <span asp-validation-for="StartDate" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="InstructorId" class="form-label"></label>
        <select asp-for="InstructorId" class ="form-select"
          asp-items="(SelectList)ViewBag.InstructorId">
          <option value="">-- Select Instructor --</option>
        </select>
        <span asp-validation-for="InstructorId" class="text-danger" />
       </div>

      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>
