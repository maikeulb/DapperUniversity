@model IEnumerable<DapperUniversity.Models.Department>
@{
    ViewData["Title"] = "Departments";
}

<main class="container">
  <h2>Departments</h2>
  <a asp-action="Create" class="btn is-link mb-2">Create New</a>
  <table class="table" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>
          <span class="text-dark"><strong>@Html.DisplayNameFor(model=>
              model.Name)</strong></span>
        </th>
        <th>
          <span class="text-dark"><strong>@Html.DisplayNameFor(model =>
              model.Budget)</strong></span>
        </th>
        <th>
          <span class="text-dark"><strong>@Html.DisplayNameFor(model =>
              model.StartDate)</strong></span>
        </th>
        <th>
          <span class="text-dark"><strong>@Html.DisplayNameFor(model =>
              model.Instructor)</strong></span>
        </th>
        <th></th>
      </tr>
    </thead>
    @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Budget)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Instructor.FullName)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link">Delete</a>
        </td>
      </tr>
    }
  </table>
</main>
